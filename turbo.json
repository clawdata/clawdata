{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "tsconfig.json"],
      "outputs": ["build/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "tests/**/*.ts"],
      "outputs": []
    },
    "lint": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dbt:run": {
      "dependsOn": ["build"],
      "inputs": ["apps/dbt/models/**/*.sql", "apps/dbt/dbt_project.yml"],
      "outputs": ["apps/dbt/target/**"],
      "cache": false
    },
    "dbt:test": {
      "dependsOn": ["dbt:run"],
      "inputs": ["apps/dbt/models/**/*.sql", "apps/dbt/models/**/*.yml"],
      "outputs": [],
      "cache": false
    },
    "dbt:docs": {
      "dependsOn": ["dbt:run"],
      "outputs": ["apps/dbt/target/catalog.json", "apps/dbt/target/manifest.json"]
    }
  }
}
